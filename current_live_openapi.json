{
  "openapi": "3.0.0",
  "info": {
    "title": "BondMCP Platform API",
    "version": "2.0.0-comprehensive",
    "description": "Comprehensive healthcare AI and MCP platform with 52 endpoints",
    "contact": {
      "name": "BondMCP Support",
      "url": "https://bondmcp.com",
      "email": "support@bondmcp.com"
    }
  },
  "servers": [
    {
      "url": "https://4ss50ogxna.execute-api.us-east-1.amazonaws.com/prod",
      "description": "Production API Gateway"
    },
    {
      "url": "https://api.bondmcp.com",
      "description": "Custom Domain (DNS propagating)"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "API Root Information",
        "description": "Returns basic API information and status",
        "responses": {
          "200": {
            "description": "API information",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {"type": "string"},
                    "version": {"type": "string"},
                    "status": {"type": "string"},
                    "endpoints": {"type": "integer"},
                    "timestamp": {"type": "string"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "summary": "System Health Check",
        "description": "Returns system health status and operational metrics",
        "responses": {
          "200": {
            "description": "System health status",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {"type": "string"},
                    "timestamp": {"type": "string"},
                    "version": {"type": "string"},
                    "environment": {"type": "string"},
                    "aws_region": {"type": "string"},
                    "endpoints_active": {"type": "integer"},
                    "database": {"type": "string"},
                    "services": {"type": "string"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "summary": "User Registration",
        "description": "Register a new user account",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {"type": "string", "format": "email"},
                  "password": {"type": "string", "minLength": 8}
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User registered successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {"type": "string"},
                    "user_id": {"type": "string"},
                    "email": {"type": "string"},
                    "access_token": {"type": "string"},
                    "token_type": {"type": "string"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "User Login",
        "description": "Authenticate user and return access token",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {"type": "string", "format": "email"},
                  "password": {"type": "string"}
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "access_token": {"type": "string"},
                    "token_type": {"type": "string"},
                    "user_id": {"type": "string"},
                    "email": {"type": "string"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "/health/bloodwork": {
      "post": {
        "summary": "AI Bloodwork Analysis",
        "description": "Analyze bloodwork data using AI and provide health insights",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "cholesterol": {"type": "number"},
                  "glucose": {"type": "number"},
                  "hemoglobin": {"type": "number"}
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Bloodwork analysis completed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "analysis": {"type": "string"},
                    "recommendations": {"type": "array", "items": {"type": "string"}},
                    "risk_factors": {"type": "array", "items": {"type": "string"}},
                    "timestamp": {"type": "string"}
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
